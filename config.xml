--<?xml version="1.0" encoding="UTF-8"?>

    <widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns="http://www.w3.org/ns/widgets" version="1.0.0" id="ca.edumedia.dufo0059.Final">

        <name>Dufo0059Cordova</name>

        <description> Sports app </description>

        <author href="http://cordova.io" email="dev@cordova.apache.org"> Apache Cordova Team </author>

        <content src="index.html" />

        <preference value="screen" name="SplashScreen" />

        <preference value="5000" name="SplashScreenDelay" />

        <plugin name="cordova-plugin-whitelist" spec="1" />

        <access origin="*" />

        <allow-intent href="http://*/*" />

        <allow-intent href="https://*/*" />

        <allow-intent href="tel:*" />

        <allow-intent href="sms:*" />

        <allow-intent href="mailto:*" />

        <allow-intent href="geo:*" />


        <platform name="android">

            <allow-intent href="market:*" />

            <splash src="res/screens/screen-ldpi-portrait.png" density="port-ldpi" />

            <splash src="res/screens/screen-mdpi-portrait.png" density="port-mdpi" />

            <splash src="res/screens/screen-hdpi-portrait.png" density="port-hdpi" />

            <splash src="res/screens/screen-xhdpi-portrait.png" density="port-xhdpi" />

            <splash src="res/screens/screen-ldpi-landscape.png" density="port-ldpi" />

            <splash src="res/screens/screen-mdpi-landscape.png" density="port-mdpi" />

            <splash src="res/screens/screen-hdpi-landscape.png" density="port-hdpi" />

            <splash src="res/screens/screen-xhdpi-landscape.png" density="port-xhdpi" />

            <icon src="res/icons/icon-36-ldpi.png" density="ldpi" />

            <icon src="res/icons/icon-48-mdpi.png" density="mdpi" />

            <icon src="res/icons/icon-72-hdpi.png" density="hdpi" />

            <icon src="res/icons/icon-96-xhdpi.png" density="xhdpi" />

            <icon src="res/icons/icon-144-xxhdpi.png" density="xxhdpi" />

        </platform>


        <platform name="ios">

        </platform>
    </widget>